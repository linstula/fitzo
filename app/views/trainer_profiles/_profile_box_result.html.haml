.row.large-offset-1.profile-box
  .avatar.left
    =image_tag profile.user.avatar_url(:small)
  .row.columns.left.prof-text-container
    .profile-text.columns
      %h6.truncate
        = link_to "#{profile.owner_name}", trainer_profile_path(profile)
      %h6.subheader.address.truncate
        - if profile.locations.size > 1
          = "#{profile.locations.first.full_address}, ..."
        -elsif profile.locations.size == 0
          = "No location established."
        - else
          = profile.locations.first.full_address
      %h6.subheader.specs.truncate
        = specialty_titles(profile).join(", ")
      %h6
        = link_to "Recommend",
        trainer_profile_path(profile), class: "button tiny"
        %span.count
          = profile.recommendations.size
